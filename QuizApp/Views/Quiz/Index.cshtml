@model SimpleQuizApp.Models.QuizViewModel

<div class="container text-center mt-5">
    <h2>@Model.Question.Text</h2>
    <form asp-action="SubmitAnswer" method="post">
        @for (int i = 0; i < Model.Question.Options.Length; i++)
        {
            <button type="submit" name="answerIndex" value="@i" class="btn btn-option mt-2 w-100">
                @Model.Question.Options[i]
            </button>
        }
    </form>
    <p class="mt-3">Question @Model.CurrentQuestionIndex sur @Model.TotalQuestions</p>
</div>

<style>
    .btn-option {
        background-color: #ffffff;
        color: #2e7d32;
        border: 2px solid #2e7d32;
        padding: 10px 15px;
        font-size: 16px;
        cursor: pointer;
        transition: background-color 0.3s, color 0.3s;
    }
    .btn-option:hover {
        background-color: #2e7d32;
        color: #ffffff;
    }
</style>
