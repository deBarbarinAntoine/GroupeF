@model IEnumerable<YellowDirectory.Models.UserViewModel>

@{
    ViewBag.Title = "Manage Users";
    Layout = "_Layout";
}

<h2>Manage Users</h2>

<table class="table">
    <thead>
    <tr>
        <th>ID</th>
        <th>Username</th>
        <th>Email</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Created Date</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.Id</td>
            <td>@user.UserName</td>
            <td>@user.Email</td>
            <td>@user.FirstName</td>
            <td>@user.LastName</td>
            <td>@user.CreatedDate</td>
            <td>
                <a asp-controller="Account" asp-action="Delete" asp-route-id="@user.Id">Delete</a>
                <a asp-controller="Account" asp-action="EditUser" asp-route-id="@user.Id">Edit</a>
            </td>
        </tr>
    }
    </tbody>
</table>