@model ApplicationUser

@{
    ViewBag.Title = "Dashboard";
    Layout = "_Layout";
}

<h2>Dashboard</h2>

@if (TempData["Message"] is not null)
{
<div class="alert">@TempData["Message"]</div>
}
@if (TempData["Alert"] is not null)
{
<div class="alert">@TempData["Alert"]</div>
}

<div class="user-actions-ctn">
    <span class="text-center">Welcome @Model.FirstName @Model.LastName!</span>
    <a asp-controller="Account" asp-action="ListUsers">Manage Users</a>
    <a asp-controller="Account" asp-action="Create">New User</a>
    <form asp-action="Logout">
        <button type="submit">Logout</button>
    </form>
</div>